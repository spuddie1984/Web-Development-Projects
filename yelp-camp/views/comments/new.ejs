<%- include('../partials/header') %>
    <section class="row d-flex justify-content-center my-4">
        <div class="col-md-6">
            <div class="jumbotron py-4">
                <h2 class="text-center">Add a Comment for <%= campground.name %></h2>
                <hr class="my-2 col-md-3">
                <p class="text-center lead"><small>Please fill in the details below to add a new comment to the <%= campground.name %> campground</small></p>
                
                <a class="btn btn-secondary btn-block mb-0" href="/campgrounds/<%= campground.id %>" role="button">Return to CampGrounds Page</a>
            </div>
                
        </div>
    </section>
    
    <section class="row d-flex justify-content-center">
        <div class="col-md-6">
            <form action="/campgrounds/<%= campground.id %>/comment" method="POST">
                <div class="form-group">
                    <textarea class="form-control" name="comment[text]" id="comment" placeholder="Your Comment" required></textarea>
                </div>
                <div class="form-group">
                    <input type="number" class="form-control" id="rating" name="comment[rating]" min="1" max="5" placeholder="Please give a rating from 1 to 5">
                </div>
                <button type="submit" class="btn btn-primary btn-block">Add your comment</button>
            </form>
        </div>
    </section>
</main>
<%- include('../partials/footer') %>