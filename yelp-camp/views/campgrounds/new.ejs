<%- include('../partials/header') %>
<main class="container">
    <section class="row d-flex justify-content-center my-4">
        <div class="col-md-6">
            <div class="jumbotron py-4">
                <h2 class="text-center">Create a CampGround</h2>
                <hr class="my-2 col-md-3">
                <p class="text-center lead"><small>Please fill in the details below to add a new CampGround</small></p>
                
                <a class="btn btn-secondary btn-block mb-0" href="/campgrounds" role="button">Return to CampGrounds Page</a>
            </div>
                
        </div>
    </section>
    
    <section class="row d-flex justify-content-center">
        <div class="col-md-6">
            <form action="/campgrounds/<% = id %>/comment" method="POST">
                <div class="form-group">
                    <input type="text" class="form-control" name="campground[name]" id="campground-name" aria-describedby="campground name" placeholder="CampGround Name" required>
                </div>
                <div class="form-group">
                    <input type="text" class="form-control" name="campground[image]" id="image-url" placeholder="Image URL" required>
                </div>
                <div class="form-group">
                    <textarea class="form-control" name="campground[description]" id="description" placeholder="Description" required></textarea>
                </div>
                <button type="submit" class="btn btn-primary btn-block">Add a CampGround</button>
            </form>
        </div>
    </section>
</main>
<%- include('../partials/footer') %>