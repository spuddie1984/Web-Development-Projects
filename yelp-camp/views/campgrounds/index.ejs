<%- include('../partials/header') %>
    <header class="jumbotron">
        <h1 class="display-4">Welcome to YelpCamp</h1>
        <p class="lead">View our hand-picked campgrounds from all over the world</p>
        <a class="btn btn-primary btn-lg" href="./campgrounds/new" role="button">Add New Campground</a>
    </header>
    
    <section class="row">
        <% for(campground of campgrounds) {%>
        <div class="col-md-4 col-sm-6 mb-4">
            <div class="card">
                <img class="card-img-top" src="<%= campground.image %>" alt="This is a campground called <%=campground.name %>">
                <div class="card-body">
                    <h5 class="card-title "><%= campground.name %></h5>
                    <a href="<%= `/campgrounds/${campground._id}` %>" class="btn btn-primary">more info</a>
                </div>
            </div>
        </div>
        <% } %>
    </section>
</main>
<%- include('../partials/footer') %>