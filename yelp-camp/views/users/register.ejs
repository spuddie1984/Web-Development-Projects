<%- include('../partials/header') %>
    <section class="row d-flex justify-content-center my-4">
        <div class="col-md-6">
            <div class="jumbotron py-4">
                <h2 class="text-center">SignUp</h2>
                <hr class="my-2 col-md-3">
                <p class="text-center lead"><small>Please fill in the details below to Signup</small></p>
                
                <a class="btn btn-secondary btn-block mb-0" href="/campgrounds" role="button">Return to CampGrounds Page</a>
            </div>  
        </div>
    </section>
    <section class="row d-flex justify-content-center">
        <div class="col-md-6">
            <form action="/register" method="POST">
                <div class="form-group">
                    <input type="text" class="form-control" name="username" id="username" placeholder="Username" required>
                </div>
                <div class="form-group">
                    <input type="password" class="form-control" name="password" id="password" placeholder="Password" required>
                </div>
                <button type="submit" class="btn btn-primary btn-block">Register</button>
            </form>
        </div>
    </section>
</main>
<%- include('../partials/footer') %>