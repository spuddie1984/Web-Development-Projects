<%- include('partials/header') %>
<main class="container">
    <header class="jumbotron">
        <h1 class="display-4">Welcome to YelpCamp</h1>
        <p class="lead">View our hand-picked campgrounds from all over the world</p>
        <a class="btn btn-primary btn-lg" href="/campgrounds/new" role="button">Add New Campground</a>
    </header>
    
    <section class="row">
        <% for(campground of campgrounds) {%>
        <div class="col-md-4 col-sm-6">
            <div class="img-thumbnail">
                <img class="img-fluid"src="<%= campground.image %>" alt="This is a campground called <%=campground.name %>">
                <h5 style="text-align: center;"><%= campground.name %></h5>
            </div> 
        </div>
        <% } %>
    </section>
</section>


</main>
<%- include('partials/footer') %>